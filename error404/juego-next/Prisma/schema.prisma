datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeature = ["mongodb"]
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId  
  mail String @unique
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


